-- 1. Create enum for roles
CREATE TYPE public.app_role AS ENUM ('admin', 'user');

-- 2. Create user_roles table
CREATE TABLE public.user_roles (
    id uuid PRIMARY KEY DEFAULT gen_random_uuid(),
    user_id uuid REFERENCES auth.users(id) ON DELETE CASCADE NOT NULL,
    role app_role NOT NULL,
    created_at timestamp with time zone NOT NULL DEFAULT now(),
    UNIQUE (user_id, role)
);

-- 3. Enable RLS on user_roles
ALTER TABLE public.user_roles ENABLE ROW LEVEL SECURITY;

-- 4. Create security definer function to check roles (avoids RLS recursion)
CREATE OR REPLACE FUNCTION public.has_role(_user_id uuid, _role app_role)
RETURNS boolean
LANGUAGE sql
STABLE
SECURITY DEFINER
SET search_path = public
AS $$
  SELECT EXISTS (
    SELECT 1
    FROM public.user_roles
    WHERE user_id = _user_id
      AND role = _role
  )
$$;

-- 5. RLS policy for user_roles - only admins can view/manage roles
CREATE POLICY "Admins can manage roles"
ON public.user_roles
FOR ALL
TO authenticated
USING (public.has_role(auth.uid(), 'admin'));

-- 6. Add DELETE policy for bookings (admin only)
CREATE POLICY "Admins can delete bookings"
ON public.bookings
FOR DELETE
TO authenticated
USING (public.has_role(auth.uid(), 'admin'));

-- 7. Add honeypot column to bookings for spam detection
ALTER TABLE public.bookings ADD COLUMN honeypot text DEFAULT NULL;

-- 8. Create function to reject spam submissions (honeypot filled = spam)
CREATE OR REPLACE FUNCTION public.check_honeypot()
RETURNS trigger
LANGUAGE plpgsql
SET search_path = public
AS $$
BEGIN
  IF NEW.honeypot IS NOT NULL AND NEW.honeypot != '' THEN
    RAISE EXCEPTION 'Submission rejected';
  END IF;
  RETURN NEW;
END;
$$;

-- 9. Create trigger to check honeypot on insert
CREATE TRIGGER check_booking_honeypot
BEFORE INSERT ON public.bookings
FOR EACH ROW
EXECUTE FUNCTION public.check_honeypot();